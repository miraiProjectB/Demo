<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ノンレム睡眠・レム睡眠とは"
            android:id="@+id/textView3"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ノンレム睡眠とは、身体は起きているのに脳が眠っている状態。​ 睡眠直後に深いノンレム睡眠がとれると熟眠度が高くなる。​ 深い、安らかな眠りである。​ ノンレム睡眠時には、身体からは熱がたくさん放出されるので体温が下がる。"
            android:id="@+id/textView5"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="◎ノンレム睡眠"
            android:id="@+id/textView4"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="◎ノンレム睡眠"
            android:id="@+id/textView6"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="レム睡眠とは、脳は起きているのに身体が眠っている状態。​ レム睡眠時に目覚めるとすっきり起きることができる。​ レム睡眠時に夢を見る。"
            android:id="@+id/textView7"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.49"
        android:id="@+id/rem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="◎参考文献"
            android:id="@+id/textView8"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="https://ja.wikipedia.org/wiki/%E3%83%AC%E3%83%A0%E7%9D%A1%E7%9C%A0 http://www.e-healthnet.mhlw.go.jp/information/dictionary/heart/yk-069.html http://www.e-healthnet.mhlw.go.jp/information/dictionary/heart/yk-048.html http://fuminners.jp/iroha/986/"
            android:id="@+id/textView9"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="戻る"
        android:id="@+id/undo_button"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"/>
</LinearLayout>